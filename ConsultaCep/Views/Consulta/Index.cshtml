@model Root
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
    <title>Consultar e Cadastrar CEP</title>
</head>
<body>

    <h4>Consultar e Cadastrar CEP</h4>
    <div class="container" style="margin-top:30px">
        <form asp-action="PesquisarCep" asp-controller="Consulta">
            <input type="submit" value="Consultar e Cadastrar" class="btn btn-info" /> <br /><br />
            <b><label for="txtCep">CEP</label></b>
            <input type="text" id="txtCep" class="form-control col-4" name="txtCep" />

        </form><br />
    </div>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">CEP</th>
                <th scope="col">Logradouro</th>
                <th scope="col">Complemento</th>
                <th scope="col">Bairro</th>
                <th scope="col">Localidade</th>
                <th scope="col">UF</th>
            </tr>
        </thead>

        <tbody>
            <tr>
                <td><input type="text" asp-for="Cep" disabled/></td>
                <td><input type="text" asp-for="Logradouro" disabled /></td>
                <td><input type="text" asp-for="Complemento" disabled/></td>
                <td><input type="text" asp-for="Bairro" disabled/></td>
                <td><input type="text" asp-for="Localidade" disabled/></td>
                <td><input type="text" asp-for="Uf" disabled /></td>

            </tr>
        </tbody>
    </table>
</body>
</html>
